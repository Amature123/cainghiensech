
block content
  h1 #{title}
  form(method='POST')
    div.form-group
      label(for='name') Name:
      br
      input#name.form-control(type='text', placeholder='Name' name='name' required value=(user ? user.name : ''))
      br
      label(for='email') Email:
      br
      input#email.form-control(type='text', placeholder='Email ' name='email' required value=(user ? user.email : ''))
      br
      label(for='password') Password:
      br
      input#password.form-control(type='password', placeholder='Password' name='password' required value=(user ? user.password : ''))
      br 
      br
    button.btn.btn-primary(type='submit') Submit
    
  if errors 
    ul
      for error in errors
        li!= error.msg
