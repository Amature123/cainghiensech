block content
  h1 #{title}
  if user
    h1 WELCOME BACK #{user.name}
    a(href="/logout") LOG OUT
  else
    h1 Please Login
    form(method='POST')
      div.form-group
        label(for='email') Email:
        br
        input#email.form-control(type='text', placeholder='Email ' name='email' required )
        br
        label(for='password') Password:
        br
        input#password.form-control(type='password', placeholder='Password' name='password' required )
        br 
        br
      button.btn.btn-primary(type='submit') Submit
      br
      a(href="/register") Dont have account  ? Register here
if errors 
    ul
      for error in errors
        li!= error.msg
